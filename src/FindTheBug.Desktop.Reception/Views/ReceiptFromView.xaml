<UserControl x:Class="FindTheBug.Desktop.Reception.Views.ReceiptView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:FindTheBug.Desktop.Reception.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#F5F5F5">
        <Border Background="White" 
                CornerRadius="10" 
                Padding="40" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Width="600"
                Margin="20">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="10" ShadowDepth="5"/>
            </Border.Effect>
            
            <StackPanel>
                <TextBlock Text="Receipt" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="#2C3E50" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,30"/>
                
                <Border Background="#ECF0F1" 
                        CornerRadius="5" 
                        Padding="20" 
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="Receipt Number:" 
                                   Grid.Row="0" 
                                   Grid.Column="0" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="#7F8C8D" 
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding ReceiptNumber}" 
                                   Grid.Row="0" 
                                   Grid.Column="1" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#2C3E50" 
                                   HorizontalAlignment="Right" 
                                   Margin="0,0,0,5"/>
                        
                        <TextBlock Text="Patient Name:" 
                                   Grid.Row="1" 
                                   Grid.Column="0" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="#7F8C8D" 
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding PatientName}" 
                                   Grid.Row="1" 
                                   Grid.Column="1" 
                                   FontSize="14" 
                                   Foreground="#2C3E50" 
                                   HorizontalAlignment="Right" 
                                   Margin="0,0,0,5"/>
                        
                        <TextBlock Text="Amount:" 
                                   Grid.Row="2" 
                                   Grid.Column="0" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="#7F8C8D" 
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding Amount}" 
                                   Grid.Row="2" 
                                   Grid.Column="1" 
                                   FontSize="14" 
                                   FontWeight="Bold" 
                                   Foreground="#27AE60" 
                                   HorizontalAlignment="Right" 
                                   Margin="0,0,0,5"/>
                        
                        <TextBlock Text="Status:" 
                                   Grid.Row="3" 
                                   Grid.Column="0" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="#7F8C8D" 
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding Status}" 
                                   Grid.Row="3" 
                                   Grid.Column="1" 
                                   FontSize="14" 
                                   Foreground="#2980B9" 
                                   HorizontalAlignment="Right" 
                                   TextWrapping="Wrap"/>
                    </Grid>
                </Border>
                
                <TextBlock Text="Status: " 
                           FontSize="14" 
                           Foreground="#34495E" 
                           Margin="0,0,5,0"/>
                <TextBlock Text="{Binding Status}" 
                           FontSize="14" 
                           Foreground="#2980B9" 
                           TextWrapping="Wrap" 
                           Margin="0,0,0,20"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>