<UserControl x:Class="FindTheBug.Desktop.Reception.Views.ReceiptView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:FindTheBug.Desktop.Reception.Views"
             mc:Ignorable="d"
             d:DesignHeight="950" d:DesignWidth="1800">
    <ScrollViewer HorizontalScrollBarVisibility="Auto">
        <Grid Background="#F5F5F5">
            <Border Background="White" 
            CornerRadius="10" 
            Padding="20" 
            Margin="20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="10" ShadowDepth="5"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Create New Receipt" Style="{DynamicResource PageHeader}"/>

                    <Border 
                Grid.Row="1"
                Style="{DynamicResource BoxBorder}">

                        <StackPanel>
                            <TextBlock Text="Patient Information" FontSize="16" Margin="0 0 0 15" FontWeight="SemiBold" Foreground="#FF5B5B5B"></TextBlock>

                            <Grid>
                                <Grid.Resources>
                                    <Style TargetType="{x:Type StackPanel}">
                                        <Setter Property="Margin" Value="2 0" />
                                    </Style>
                                </Grid.Resources>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Column="0">
                                    <Label>Name *</Label>
                                    <TextBox></TextBox>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <Label>Phone Number *</Label>
                                    <TextBox></TextBox>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <Label>Age *</Label>
                                    <TextBox></TextBox>
                                </StackPanel>

                                <StackPanel Grid.Column="3">
                                    <Label>Gender</Label>
                                    <ComboBox>
                                        <ComboBoxItem Content="Select Gender"></ComboBoxItem>
                                        <ComboBoxItem Content="Male"></ComboBoxItem>
                                        <ComboBoxItem Content="Female"></ComboBoxItem>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Grid.Column="4" Grid.ColumnSpan="2">
                                    <Label>Address *</Label>
                                    <TextBox></TextBox>
                                </StackPanel>

                                <StackPanel Grid.Column="0" Grid.Row="1">
                                    <Label>Refered By *</Label>
                                    <ComboBox></ComboBox>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.Row="1">
                                    <Label>Date</Label>
                                    <DatePicker></DatePicker>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border 
                        Grid.Row="2"
                        Style="{DynamicResource BoxBorder}">

                        <StackPanel>
                            <TextBlock Text="Test Details" FontSize="16" Margin="0 0 0 15" FontWeight="SemiBold" Foreground="#FF5B5B5B"></TextBlock>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"></ColumnDefinition>
                                    <ColumnDefinition Width="16"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <DataGrid Height="400" Grid.Column="0" ItemsSource="{Binding Tests}">
                                    <DataGrid.Columns >
                                        <DataGridTextColumn Header="Test Name" Binding="{Binding Name}" Width="Auto"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="100"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Discount" Binding="{Binding Discount}" Width="100"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="100"></DataGridTextColumn>
                                        <DataGridTextColumn Header="Delete" Width="60"></DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <Grid Grid.Column="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <StackPanel Margin="2 0" Grid.Column="0">
                                        <Label Content="Test Name"></Label>
                                        <ComboBox>
                                            <ComboBoxItem Content="X-Ray"  IsSelected="True" ></ComboBoxItem>
                                        </ComboBox>
                                    </StackPanel>
                                    <StackPanel Margin="2 0" Grid.Column="1">
                                        <Label Content="Amount (BDT &#x09F3;)"></Label>
                                        <TextBox Text="100" TextAlignment="Center"></TextBox>
                                    </StackPanel>
                                    <StackPanel Margin="2 0" Grid.Column="2">
                                        <Label Content="Discount % (Optional)"></Label>
                                        <TextBox Text="0" TextAlignment="Center"></TextBox>
                                    </StackPanel>
                                    <StackPanel Margin="2 0" Grid.Column="3">
                                        <Label Content=""></Label>
                                        <Button Content="Add Test" Command="{Binding AddTestCommand}"></Button>
                                    </StackPanel>

                                    <Grid Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <Label Grid.Row="0" Grid.Column="0" Content="Sub-Total" 
                                                   HorizontalAlignment="Right" 
                                                   VerticalAlignment="Center"></Label>
                                        <TextBox Grid.Row="0" Grid.Column="2"  Text="500" 
                                                 Margin="0" TextAlignment="Right"/>

                                        <Label Grid.Row="1" Grid.Column="0" Content="Discount"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"></Label>
                                        <TextBox Grid.Row="1" Grid.Column="2" Text="500" Margin="0" TextAlignment="Right"/>

                                        <Label Grid.Row="2" Grid.Column="0" Content="Total"
                                               HorizontalAlignment="Right" 
                                               VerticalAlignment="Center"></Label>
                                        <TextBox Grid.Row="2" Grid.Column="2" Text="500" Margin="0" TextAlignment="Right"/>

                                        <Label Grid.Row="3" Grid.Column="0" Content="Due"
                                               HorizontalAlignment="Right" 
                                               VerticalAlignment="Center"></Label>
                                        <TextBox Grid.Row="3" Grid.Column="2" Text="500" Margin="0" TextAlignment="Right"/>

                                        <Label Grid.Row="4" Grid.Column="0" Content="Balace" 
                                               HorizontalAlignment="Right" 
                                               VerticalAlignment="Center"></Label>
                                        <TextBox Grid.Row="4" Grid.Column="2" Text="500" Margin="0" TextAlignment="Right"/>
                                    </Grid >
                                </Grid>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="3" VerticalAlignment="Bottom">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            
                            <Button Content="Reset" Background="OrangeRed" Margin="0 0 5 0" Grid.Column="3"></Button>
                            <Button Content="Confirm Save" Background="ForestGreen" Margin="0 0 5 0" Grid.Column="4"></Button>
                            <Button Content="Print" Grid.Column="5" Margin="0 0 5 0"></Button>
                            <Button Content="Create New" Grid.Column="6"></Button>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>