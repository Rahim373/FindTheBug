<Window x:Class="FindTheBug.Desktop.Reception.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FindTheBug.Desktop.Reception"
        mc:Ignorable="d"
        Title="FindTheBug Reception"
        WindowState="Normal"
        WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <Style TargetType="Menu">
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style TargetType="MenuItem">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#FF174F8E"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF174F8E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF174F8E"/>
                    <GradientStop Color="#FF2C3E50" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" >
                <TextBlock FontSize="20" Padding="10 20 0 0" Foreground="White" FontWeight="Bold">Mathbaria Al-Razi Diagnostics and Consultation Center</TextBlock>
                <TextBlock FontSize="25" Padding="10 0 0 20" Foreground="White">Reception App</TextBlock>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Padding="5 3" Foreground="White" FontWeight="Bold" Text="Sync" />
                        <Ellipse Width="10" Height="10" Margin="5 8 10 3" VerticalAlignment="Top">
                            <Ellipse.Fill>
                                <SolidColorBrush Color="{Binding SyncStatus, Converter={StaticResource SyncStatusColorConverter}}"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </StackPanel>

                    <TextBlock Grid.Row="1" TextAlignment="Right"
                               Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}"
                               HorizontalAlignment="Right" Padding="10" 
                               Text="{Binding UserName}"
                               FontWeight="Bold"
                               Foreground="White"></TextBlock>
                </Grid>
                
            </StackPanel>
        </Grid>


        <!-- Top Menu Bar - Only visible when logged in -->
        <Menu Grid.Row="1" 
              VerticalAlignment="Top"
              Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}">
            <MenuItem Header="Home" Command="{Binding HomeCommand}"/>
            <MenuItem Header="Receipts" Command="{Binding ReceiptsCommand}"/>
            <MenuItem Header="Doctors" Command="{Binding DoctorsCommand}"/>
            <MenuItem Header="Reports" Command="{Binding ReportsCommand}"/>
            <MenuItem Header="Logout" Command="{Binding LogoutCommand}"/>
        </Menu>

        <!-- Content Area -->
        <ContentControl Grid.Row="2" Content="{Binding CurrentView}"/>
    </Grid>
</Window>