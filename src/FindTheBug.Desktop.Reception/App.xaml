<Application x:Class="FindTheBug.Desktop.Reception.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FindTheBug.Desktop.Reception"
             xmlns:converters="clr-namespace:FindTheBug.Desktop.Reception.Converters"
             ShutdownMode="OnMainWindowClose"
             StartupUri="/Views/Windows/MainWindow.xaml">
    <Application.Resources>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:SyncStatusColorConverter x:Key="SyncStatusColorConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:ZeroToEmptyStringConverter x:Key="ZeroToEmptyStringConverter"/>
        <converters:NumberToPercentageStringConverter x:Key="NumberToPercentageStringConverter"/>
        <converters:EnumDescriptionConverter x:Key="EnumDescriptionConverter"/>

        <Style TargetType="{x:Type Label}">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#FF5B5B5B"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        
        <Style TargetType="{x:Type TextBlock}" x:Key="PageHeader">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style TargetType="{x:Type TextBlock}" x:Key="ErrorMessage">
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Padding" Value="7"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style TargetType="{x:Type ComboBox}">
            <Setter Property="Padding" Value="7"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style TargetType="{x:Type DatePicker}">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="Background" Value="white"/>
        </Style>
        <Style TargetType="DatePickerTextBox">
            <Setter Property="Padding" Value="5 0"/>
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style TargetType="{x:Type Button}">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="30"/>
            
            <Setter Property="BorderBrush" Value="#3498DB"/>
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="{x:Type DataGrid}">
            <Setter Property="AutoGenerateColumns" Value="False"></Setter>
            <Setter Property="IsReadOnly" Value="True"></Setter>
            <Setter Property="CanUserAddRows" Value="False"></Setter>
            <Setter Property="CanUserDeleteRows" Value="False"></Setter>
            <Setter Property="CanUserSortColumns" Value="True"></Setter>
            <Setter Property="GridLinesVisibility" Value="Horizontal"></Setter>
            <Setter Property="HorizontalGridLinesBrush" Value="LightGray"></Setter>
            <Setter Property="HeadersVisibility" Value="Column"></Setter>
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="RowHeight" Value="30"></Setter>
            <Setter Property="BorderBrush" Value="LightGray"></Setter>
            <Setter Property="FontSize" Value="13"></Setter>
            <Setter Property="ColumnHeaderHeight" Value="30"></Setter>
            <Setter Property="AlternatingRowBackground" Value="#F9F9F9"></Setter>
            <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"></Setter>

            <Setter Property="RowStyle">
                <Setter.Value>
                    <!-- This is the Style for the DataGridRow -->
                    <Style TargetType="{x:Type DataGridRow}">
                        <!-- Default properties for the row -->
                        <Setter Property="BorderBrush" Value="#E0E0E0" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />

                        <Style.Triggers>
                            <!-- Mouse over effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E8F6F3"/>
                            </Trigger>

                            <!-- Selected row styling (when the grid does not have focus) -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#D1F2EB"/>
                            </Trigger>

                            <!-- Selected row styling when the grid IS focused -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True" />
                                    <Condition Property="IsFocused" Value="False" />
                                </MultiTrigger.Conditions>
                                <Setter Property="Background" Value="#D1F2EB"/>
                            </MultiTrigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="FontWeight" Value="Bold" />
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BoxBorder" TargetType="{x:Type Border}">
            <Setter Property="CornerRadius" Value="5"></Setter>
            <Setter Property="Padding" Value="10 5"></Setter>
            <Setter Property="Margin" Value="0 0 0 15"></Setter>
            <Setter Property="Background" Value="#F5F5F5"></Setter>
            
        </Style>
    </Application.Resources>
</Application>