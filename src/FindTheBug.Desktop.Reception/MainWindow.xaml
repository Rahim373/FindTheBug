<Window x:Class="FindTheBug.Desktop.Reception.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FindTheBug.Desktop.Reception"
        mc:Ignorable="d"
        Title="FindTheBug Reception" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Menu">
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style TargetType="MenuItem">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Background="#FF2C3E50">
            <TextBlock FontSize="17" Padding="5 3" Foreground="White" FontWeight="Bold">Mathbaria Al-Razi Diagnostics and Consultation Center</TextBlock>
            <TextBlock FontSize="20" Padding="5 0 0 10" Foreground="White">Reception App</TextBlock>
        </StackPanel>

        <!-- Top Menu Bar - Only visible when logged in -->
        <Menu Grid.Row="1" 
              VerticalAlignment="Top"
              Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}">
            <MenuItem Header="Home" Command="{Binding HomeCommand}"/>
            <MenuItem Header="Receipts" Command="{Binding ReceiptsCommand}"/>
            <MenuItem Header="Doctors" Command="{Binding DoctorsCommand}"/>
            <MenuItem Header="Sync Data" Command="{Binding SyncDataCommand}"/>
            <MenuItem Header="Logout" Command="{Binding LogoutCommand}"/>
        </Menu>

        <!-- Content Area -->
        <ContentControl Grid.Row="2" Content="{Binding CurrentView}"/>
    </Grid>
</Window>